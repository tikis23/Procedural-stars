#version 410 core

layout (location = 0) out vec4 gColor;
layout (location = 1) out vec3 gPosition;
layout (location = 2) out vec3 gNormal;

in TES {
    vec3 position;
    vec3 normal;
    vec3 color;
} vertex;

void main() {
    gPosition = vertex.position;
    gNormal = vertex.normal;
    gColor = vec4(vertex.color, 1);
}
