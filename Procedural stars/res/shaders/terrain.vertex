#version 410 core

layout(location = 0) in vec3 in_position;
layout(location = 1) in vec3 in_color;
layout(location = 2) in vec3 in_normal;
layout(location = 3) in int in_edge;

out VertexOut {
    vec3 position;
    vec3 normal;
    vec3 color;
    int edge;
} vertex;

uniform int u_showLod;

void main()
{
    vertex.edge = in_edge;
    vertex.color = in_color * u_showLod + vec3(1, 1, 0) * (1 - u_showLod);
    vertex.normal = in_normal;
    vertex.position = in_position;
}